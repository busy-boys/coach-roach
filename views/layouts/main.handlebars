      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/my-sessions.css" />
    <title>Roach Coach</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Coaching Solutions</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            {{#if loggedIn}}
              <li class="nav-item">
                <a class="nav-link" href="/booksession">Book Coaching Session</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/mysessions">My Sessions</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/mystats">My Stats</a>
              </li>
              <li class="nav-item">
              <li class="nav-item">
                <a class="nav-link" href="/api/user/logout">Logout</a>
              </li>
              <li class="nav-item">
                <b>
                  <a class="nav-link" href="/mystats">Hi,
                    {{firstName}}
                    {{lastName}}</a>

                </b>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">Signup</a>
              </li>
            {{/if}}
          </ul>
          <ul class="navbar-nav justify-content-end">
            <li class="nav-item">
              <a href="https://github.com/busy-boys/project-2">
                <i
                  class="bi bi-github"
                  style="font-size: 1.5rem; color: black;"
                ></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <br /><br />
    {{{body}}}
    <br /><br />
    <br /><br />
